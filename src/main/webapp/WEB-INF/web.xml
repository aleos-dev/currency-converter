<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Filter Definitions -->
    <filter>
        <filter-name>ExceptionHandlingFilter</filter-name>
        <filter-class>com.aleos.filters.common.ExceptionHandlingFilter</filter-class>
    </filter>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>com.aleos.filters.common.EncodingFilter</filter-class>
    </filter>

    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>com.aleos.filters.common.CorsFilter</filter-class>
    </filter>

    <filter>
        <filter-name>JsonResponseFilter</filter-name>
        <filter-class>com.aleos.filters.common.JsonResponseFilter</filter-class>
    </filter>

    <filter>
        <filter-name>CachingFilter</filter-name>
        <filter-class>com.aleos.filters.common.CachingFilter</filter-class>
    </filter>

    <filter>
        <filter-name>CurrencyFilter</filter-name>
        <filter-class>com.aleos.filters.CurrencyFilter</filter-class>
    </filter>

    <filter>
        <filter-name>CurrenciesFilter</filter-name>
        <filter-class>com.aleos.filters.CurrenciesFilter</filter-class>
    </filter>

    <filter>
        <filter-name>ConversionRateFilter</filter-name>
        <filter-class>com.aleos.filters.ConversionRateFilter</filter-class>
    </filter>

    <filter>
        <filter-name>ConversionRatesFilter</filter-name>
        <filter-class>com.aleos.filters.ConversionRatesFilter</filter-class>
    </filter>

    <filter>
        <filter-name>ConversionFilter</filter-name>
        <filter-class>com.aleos.filters.ConversionFilter</filter-class>
    </filter>

    <!-- Filter Mappings -->
    <filter-mapping>
        <filter-name>ExceptionHandlingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>JsonResponseFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>CachingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>CurrencyFilter</filter-name>
        <url-pattern>/currency/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>CurrenciesFilter</filter-name>
        <url-pattern>/currencies</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>ConversionRateFilter</filter-name>
        <url-pattern>/exchangeRate/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>ConversionRatesFilter</filter-name>
        <url-pattern>/exchangeRates</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>ConversionFilter</filter-name>
        <url-pattern>/exchange</url-pattern>
    </filter-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/error404</location>
    </error-page>
    <error-page>
        <error-code>405</error-code>
        <location>/error405.jsp</location>
    </error-page>
</web-app>
