<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- Filter Definitions -->
    <filter>
        <filter-name>ExceptionHandlingFilter</filter-name>
        <filter-class>com.aleos.servlets.filters.ExceptionHandlingFilter</filter-class>
    </filter>

    <filter>
        <filter-name>ResponseFilter</filter-name>
        <filter-class>com.aleos.servlets.filters.ResponseFilter</filter-class>
    </filter>

    <filter>
        <filter-name>CachingFilter</filter-name>
        <filter-class>com.aleos.servlets.filters.CachingFilter</filter-class>
    </filter>

    <filter>
        <filter-name>CurrencyFilter</filter-name>
        <filter-class>com.aleos.servlets.filters.CurrencyRequestProcessingFilter</filter-class>
    </filter>

    <filter>
        <filter-name>CurrenciesFilter</filter-name>
        <filter-class>com.aleos.servlets.filters.CurrenciesRequestProcessingFilter</filter-class>
    </filter>

    <!-- Filter Mappings -->
    <filter-mapping>
        <filter-name>ExceptionHandlingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>ResponseFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>CachingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>CurrencyFilter</filter-name>
        <url-pattern>/currency/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>CurrenciesFilter</filter-name>
        <url-pattern>/currencies</url-pattern>
    </filter-mapping>
</web-app>
